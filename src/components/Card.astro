---
import WarningCircleIcon from "../assets/icons/warning-circle-icon.astro";

const { class: className, text,  props } = Astro.props;
---

<style >
  .card {
    /* max-width: 300px; */
    display: flex;
    gap: 12px;
    justify-content: space-around;
    align-items: center;
    flex-direction: row;
    background-color: rgb(var(--surface-color));
    border-radius: 10px;
    box-shadow: 0px 8px 30px rgba(255, 102, 0, 0.6);
    padding: 15px 30px;
  }

  .icon {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text p {
    font-size: 20px;
    color: rgb(var(--primary-color))
  }
</style>

<div class=`card ${className}` {...props}>
  <div class="icon">
    <WarningCircleIcon /> 
  </div>
  <div class="text">
    <p class="font-semibold tracking-tighter">
    {text}
    </p>
  </div>
</div>


