<script is:inline>
  // on scroll add in-view class to rectangle
  window.addEventListener("scroll", () => {
    const rectangle = document.querySelector(".rectangle");
    const rectTop = rectangle.getBoundingClientRect().top;
    const rectBottom = rectangle.getBoundingClientRect().bottom;
    console.log("Inner Heigh", window.innerHeight, rectTop);
    
    if (rectTop < window.innerHeight && rectBottom > 0) {
      rectangle.classList.add("in-view");
    } else {
      rectangle.classList.remove("in-view");
    }
  });
</script>

<style is:global>
  .rectangle {
    width: 20%;
    height: 10%;
    background-color: var(--surface-color);
    opacity: 0;
    transition: all 0.5s ease-in-out;
  }
  .top-left {
    top: 10;
    left: 20;
    opacity: 1;
    transform: translateX(100%);
  }

  .in-view {
    opacity: 1;
    transform: translateX(0) translateY(0);
  }
</style>
