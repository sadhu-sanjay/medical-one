---
import Card from "../components/Card.astro";
---

<section
  id="section1"
  class="relative bg-primary-background/10 w-full h-[300dvh]"
>
  <section id="subsection1" class="w-full h-[100dvh] sticky top-0">
    <div
      id="hero-box"
      class="h-full w-full sm:w-1/2 mx-auto flex flex-col items-center justify-center gap-8"
    >
      <div
        class="border border-primary border-1
        text-primary
        tracking-tighter
        rounded-lg px-6 py-2 font-bold flex items-center"
      >
        <p class="font-bold text-4xl">â€¢</p>
        <h1 class="ml-2">Complexity is increasing</h1>
      </div>
      <h1
        class="text-primary font-extrabold text-4xl sm:text-6xl
        tracking-tighter
        leading-tight
        text-center"
      >
        Health and care workers usually make mistakes as a result of a system or
        process failures, not because of their own errors.
      </h1>
    </div>
  </section>

  <section id="subsection2" class="relative w-full h-full">

    <Card text="Many Regulatory policies to comply with" class="box1" />

    <Card text="New Clinical evidence to understand and implement."
      class="box2"
    />

    <Card text="Staff burnout and workforce shortages." class="box3" />

    <Card text="Communication within a healthcare organization." class="box4" />
  </section>

  <section id="subsection3">
    <Card text="More equipment and drug instructions for use." class="box5" />
    <Card
      text="Diversity of tasks involved in the delivery  of patient care."
      class="box6"
    />
    <Card
      text="Increased specialization of health-care professionals"
      class="box7"
    />
  </section>
</section>

<script is:inline>
  const break1 = 12;
  const break2 = 29;
  const break3 = 35;

  const boxes = document.querySelectorAll(
    ".box1, .box2, .box4, .box3, .box5, .box6, .box7"
  );

  const heroBox = document.getElementById("hero-box");
  const subsection2 = document.getElementById("subsection2");

  window.addEventListener("scroll", () => {
    let scrollableHeight =
      document.documentElement.scrollHeight - window.outerHeight;
    let scrollY = window.scrollY;
    let percentageScrolled = (scrollY / scrollableHeight) * 100;

    let scrollValue;
    let opacity;
    let scale;

    console.log("Section1 Scrolled", percentageScrolled);
    if (percentageScrolled === 0) {
      heroBox.style.opacity = 1;
      scrollValue = `0%`;
      opacity = 1;
      scale = 1.5;
    } else if (percentageScrolled > 0 && percentageScrolled <= break1) {
      heroBox.style.opacity = 0.2;
      scrollValue = "25%";
      opacity = 1;
      scale = 1;
    } else if (percentageScrolled > break1 && percentageScrolled <= break2) {
      heroBox.style.opacity = 0;
      scrollValue = "40%";
      opacity = 0.06;
      scale = 0.65;
    } else if (percentageScrolled > break2 && percentageScrolled <= break3) {
      scrollValue = "45%";
      opacity = 0;
      scale = 0.5;
    } else if (percentageScrolled > break3) {
      opacity = 0;
    }

    boxes.forEach((box) => {
      if (box.classList.contains("box1")) {
        box.style.top = scrollValue;
        box.style.left = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box2")) {
        box.style.right = scrollValue;
        box.style.top = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box4")) {
        box.style.right = scrollValue;
        box.style.bottom = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box3")) {
        box.style.left = scrollValue;
        box.style.bottom = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box5")) {
        if (percentageScrolled <= break1 || percentageScrolled > break2) {
          box.style.opacity = 0;
        } else {
          box.style.opacity = 1;
        }

        box.style.right = scrollValue;
        box.style.top = scrollValue;
        box.style.scale = scale;
      } else if (box.classList.contains("box6")) {
        if (percentageScrolled <= break1 || percentageScrolled > break2) {
          box.style.opacity = 0;
        } else {
          box.style.opacity = 1;
        }

        box.style.scale = scale;
        box.style.left = scrollValue;
        box.style.top = scrollValue;
      } else if (box.classList.contains("box7")) {
        if (percentageScrolled <= break1 || percentageScrolled > break2) {
          box.style.opacity = 0;
        } else {
          box.style.opacity = 1;
        }

        box.style.right = scrollValue;
        box.style.bottom = scrollValue;
        box.style.scale = scale;
      }
    });
  });
</script>

<style is:global>
  /* Initial positions */
  .box1,
  .box2,
  .box3,
  .box4,
  .box5,
  .box6,
  .box7 {
    position: fixed;
    height: 100px;
    background-color: red;
    transition: all 0.5s ease-in-out;
  }
  #hero-box {
    transition: opacity 0.4s ease-in-out;
  }

  .box1 {
    top: 0;
    left: 0;
    transform: translate(-60%, -120%) scale(1.1);
  }
  .box2 {
    top: 0;
    right: 0;
    transform: translate(50%, -60%) scale(1.1);
  }
  .box3 {
    bottom: 0;
    left: 0;
    transform: translate(-20%, 60%) scale(1.1);
  }
  .box4 {
    right: 0%;
    bottom: 0%;
    transform: translate(20%, 100%) scale(1.1);
  }
  .box5 {
    right: 0;
    top: 0;
    transform: translate(140%, -250%) scale(1.4);
  }
  .box6 {
    left: 0;
    top: 0;
    transform: translate(-140%, 20%) scale(1.4);
  }
  .box7 {
    right: 0%;
    bottom: 0%;
    transform: translate(100%, 0%) scale(1.4);
  }
</style>
