<script is:inline>
  const break1 = 12;
  const break2 = 29;
  const break3 = 35;

  function section2State0() {
    // subsection2.style.scale = 3.7
    subsection2.style.scale = 1
  }

  function section2State1() {
    subsection2.style.scale = 1;
  }

  function section2State2() {
    subsection2.style.scale = 0.5;
  }

  function section2State3() {
    subsection2.style.scale = 0;
  }

  const boxes = document.querySelectorAll(
    ".box1, .box2, .box4, .box3, .box5, .box6, .box7"
  );

  const heroBox = document.getElementById("hero-box");
  const subsection2 = document.getElementById("subsection2");

  window.addEventListener("scroll", () => {
    let scrollableHeight =
      document.documentElement.scrollHeight - window.outerHeight;
    let scrollY = window.scrollY;
    let percentageScrolled = (scrollY / scrollableHeight) * 100;

    let scrollValue;
    let opacity;
    let scale;

    console.log("Section1 Scrolled", percentageScrolled);
    if (percentageScrolled === 0) {
      section2State0();
      heroBox.style.opacity = 1;
      scrollValue = `0%`;
      opacity = 1;
      scale = 1.5;
    } else if (percentageScrolled > 0 && percentageScrolled <= break1) {
      // section2State1();
      heroBox.style.opacity = 0.2;
      scrollValue = "25%";
      opacity = 1;
      scale = 1;
    } else if (percentageScrolled > break1 && percentageScrolled <= break2) {
      // section2State2();
      heroBox.style.opacity = 0;
      scrollValue = "40%";
      opacity = 0.06;
      scale = 0.65;
    } else if (percentageScrolled > break2 && percentageScrolled <= break3) {
      // section2State3();
      scrollValue = "45%";
      opacity = 1;
      scale = 0.5;
    } else if (percentageScrolled > break3) {
      opacity = 0;
    }

    return console.log("Here & There");

    boxes.forEach((box) => {
      if (box.classList.contains("box1")) {
        box.style.top = scrollValue;
        box.style.left = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box2")) {
        box.style.right = scrollValue;
        box.style.top = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box4")) {
        box.style.right = scrollValue;
        box.style.bottom = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box3")) {
        box.style.left = scrollValue;
        box.style.bottom = scrollValue;
        box.style.scale = scale;
        box.style.opacity = opacity;
      } else if (box.classList.contains("box5")) {
        if (percentageScrolled <= break1 || percentageScrolled > break2) {
          box.style.opacity = 0;
        } else {
          box.style.opacity = 1;
        }

        box.style.right = scrollValue;
        box.style.top = scrollValue;
        box.style.scale = scale;
      } else if (box.classList.contains("box6")) {
        if (percentageScrolled <= break1 || percentageScrolled > break2) {
          box.style.opacity = 0;
        } else {
          box.style.opacity = 1;
        }

        box.style.scale = scale;
        box.style.left = scrollValue;
        box.style.top = scrollValue;
      } else if (box.classList.contains("box7")) {
        if (percentageScrolled <= break1 || percentageScrolled > break2) {
          box.style.opacity = 0;
        } else {
          box.style.opacity = 1;
        }

        box.style.right = scrollValue;
        box.style.bottom = scrollValue;
        box.style.scale = scale;
      }
    });
  });
</script>