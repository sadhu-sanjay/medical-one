---
import WarningTriangleIcon from "../assets/icons/warning-triangle-icon.astro";

const { class: className, text, props } = Astro.props;
---

<style>
  .card {
    transition: all 0.5s ease-in-out;
    display: flex;
    gap: 22px;
    justify-content: space-around;
    align-items: center;
    flex-direction: row;
    background-color: rgb(var(--surface-color));
    border-radius: 10px;
    box-shadow: 0px 8px 30px rgba(255, 102, 0, 0.6);
  }

  .icon {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text p {
    color: rgb(var(--primary-color));
  }
</style>

<div
  class=`${className} card px-6 py-3 lg:py-6 lg:px-12 md:w-5/12 xl:w-3/12 xl:max-w-screen-sm`
  {...props}
>
  <div class="icon">
    <WarningTriangleIcon />
  </div>
  <div class="text">
    <p class="text-lg font-semibold tracking-tight sm:text-xl xl:text-2xl">
      {text}
    </p>
  </div>
</div>
