---
import WarningTriangleIcon from "../assets/icons/warning-triangle-icon.astro";

const { class: className, text, props } = Astro.props;
---

<style>
  .card {
    max-width: 450px;
    display: flex;
    gap: 12px;
    justify-content: space-around;
    align-items: center;
    flex-direction: row;
    background-color: rgb(var(--surface-color));
    border-radius: 10px;
    box-shadow: 0px 8px 30px rgba(255, 102, 0, 0.6);
    padding: 12px 24px;
  }

  .icon {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text p {
    font-size: 16px;
    color: rgb(var(--primary-color));
  }
</style>

<div class=`card ${className}` {...props}>
  <div class="icon">
    <WarningTriangleIcon />
  </div>
  <div class="text">
    <p class="font-semibold tracking-tighter">
      {text}
    </p>
  </div>
</div>
