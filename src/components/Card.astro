---
const { class: className, text,  props } = Astro.props;
---

<div class=`card ${className}` {...props}>
  <div class="icon">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="60"
      height="60"
      viewBox="0 0 24 24"
      fill="orange"
    >
      <path d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M12 2C6.48 2 2 6.48 2 12c0 5.52 4.48 10 10 10s10-4.48 10-10c0-5.52-4.48-10-10-10zm0 18c-4.41 0-8-3.59-8-8 0-4.41 3.59-8 8-8s8 3.59 8 8c0 4.41-3.59 8-8 8zm-1-9h2v4h-2zm0-6h2v2h-2z"
      ></path>
    </svg>
  </div>
  <div class="text">
    <p class="font-semibold tracking-tighter">
    {text}
    </p>
  </div>
</div>

<style >
  .card {
    display: inline-flex;
    align-items: center;
    flex-direction: row;
    background-color: var(--surface-color);
    border-radius: 10px;
    box-shadow: 0px 8px 30px rgba(255, 102, 0, 0.6);
    padding: 20px 0;
    width: auto;
    height: auto;
  }

  .icon {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text p {
    font-size: 20px;
    color: var(--text-color);
  }
</style>
